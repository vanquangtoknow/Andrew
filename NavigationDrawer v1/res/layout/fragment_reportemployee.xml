<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ReportEmployeeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:background="#16627A"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".V2Activity" >

    <TableRow
        android:id="@+id/tableRow1A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#25A7D3">

        <TextView
            android:id="@+id/ptextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EMPLOYEE REPORT"
            android:background="#25A7D3"
        	android:textColor="#FDFDFD"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="0dp"
            android:minLines="0"
            android:minWidth="0dp"
            android:text="Ref"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/toggleButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/title"
            android:layout_gravity="center"
            android:minEms="0"
            android:minHeight="0dp"
            android:minLines="0"
            android:minWidth="0dp"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:switchMinWidth="1dp"
            android:text=""
            android:textAlignment="inherit"
            android:textOff=""
            android:textOn=""
            android:textSize="4sp" />

    </TableRow>
	<TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1A"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="  Begin  "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/peditText1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:textSize="12sp" >

                    <requestFocus />
                </EditText>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="  End  "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/peditText2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:textSize="12sp" />

            </TableRow>

        </TableRow>

        <ProgressBar
            android:id="@+id/pprogressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:minHeight="30dp"
            android:minWidth="30dp" />

    </TableRow>
    
    <TableRow
        android:id="@+id/TableRow02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true" > 

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

            <TableRow
                android:id="@+id/TableRow04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/Single1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:id="@+id/TableRow03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6" >

                <Button
                    android:id="@+id/DayChoose1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="Day"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/MonthChoose1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="Mon"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/YearChoose1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="Yea"
                    android:textSize="11sp" />

            </TableRow>

            <ProgressBar
                android:id="@+id/ProgressBar01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:minHeight="30dp"
                android:minWidth="30dp" />

        </TableRow>
    </TableRow>

    <View
        android:id="@+id/pseparator1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/TableRow02"
        android:background="#00B6F8" />

    <!--
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator1" 
		android:layout_alignParentRight="true">
    </ListView>

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/separator1" >
    </ListView>
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#FFFFFF"
        android:layout_below="@+id/pseparator1" >

        <ListView
            android:id="@+id/plistView1"
            android:choiceMode="singleChoice"
            android:layout_width="85dp"
            android:layout_height="wrap_content" >
        </ListView>

        <View
            android:id="@+id/pseparator2"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#00B6F8" />

        <ListView
            android:id="@+id/plistView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>
    </LinearLayout>

</RelativeLayout>