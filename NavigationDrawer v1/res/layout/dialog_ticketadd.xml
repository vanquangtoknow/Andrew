<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	    <ListView
	        android:id="@+id/dlglv_ticketadd"
	        android:layout_width="match_parent"
	        android:layout_height="100dp" >
	    </ListView>
	    <View
	    android:id="@+id/separator2"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_below="@+id/TableRow02"
	    android:background="#00B6F8" />
    </LinearLayout>
    <TableLayout
	        android:layout_width="fill_parent"
	        android:layout_height="160dp"
	        >
	        <TableRow
	            android:id="@+id/tableRow1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >

	            <TextView
	                android:id="@+id/textView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Choose Categories"
	                android:layout_weight="1"
	                 />
	            <TextView
	                android:id="@+id/textView2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Choose Services"
	                android:layout_weight="1"
	                />

	        </TableRow>

	        <TableRow
	            android:id="@+id/tableRow2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            <ListView
		            android:id="@+id/dlglv_categories"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1" >
		        </ListView>
		        <ListView
		            android:id="@+id/dlglv_services"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1" >
		        </ListView>
	        </TableRow>
	    </TableLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
         >
        <ImageButton android:id="@+id/dlgbtnok_ticketadd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_ok"
	        android:background="@drawable/selector"
	        android:text="OK" />
        <ImageButton
	        android:id="@+id/dlgbtncancel_ticketadd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_cancel"
	        android:background="@drawable/selector"
	        android:text="Cancel" />
	    </LinearLayout>
</LinearLayout>
